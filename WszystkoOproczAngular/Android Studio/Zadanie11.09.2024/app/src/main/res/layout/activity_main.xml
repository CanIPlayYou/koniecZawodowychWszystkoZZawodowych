<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dcb9a1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gra w karty  Maciej Dawid"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCard"
            android:layout_width="79dp"
            android:layout_height="295dp"
            android:contentDescription="Card Image"
            android:src="@drawable/card_back_black" />

        <ImageView
            android:id="@+id/imageViewCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/card_back_black" />

        <ImageView
            android:id="@+id/imageViewCard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/card_back_black" />

        <ImageView
            android:id="@+id/imageViewCard4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/card_back_black" />

        <ImageView
            android:id="@+id/imageViewCard5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/card_back_black" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonDraw"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ae8f7a"
        android:text="Losuj" />

    <TextView
        android:id="@+id/iloscPunktowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Ilość punktów:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ukladText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Układ kart:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wynikGryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Wynik Gry: "
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    android:orientation="vertical"
    android:id="@+id/main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A52A2A"
        android:gravity="center_horizontal|center_vertical"
        android:text="Gra w kości. Autor Maciej Dawid"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/rzucKoscButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#D2691E"
        android:text="RZUĆ KOŚCMI"
        app:cornerRadius="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/koscImage1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/koscImage2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/koscImage3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/koscImage4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />

        <ImageView
            android:id="@+id/koscImage5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />
    </LinearLayout>

    <TextView
        android:id="@+id/wynikLosowaniaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Wynik tego losowania: " />

    <TextView
        android:id="@+id/wynikGryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Wynik gry: " />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#D2691E"
        android:text="RESETUJ WYNIK"
        app:cornerRadius="10dp" />
</LinearLayout>